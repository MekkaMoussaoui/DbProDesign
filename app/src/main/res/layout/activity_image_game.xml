<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dz.youcefmegoura.test.databasepro.Views.ImageGame"
    android:background="#e5f2f2f2"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/playCategorie"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCIENCE"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        />

    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/crown" />

    <TextView
        android:id="@+id/score_tout_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="30dp"
        android:text="1800"
        android:textSize="15dp"
        android:textColor="#403c3c"/>

    <ImageView

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="270dp"
        android:src="@drawable/jeton" />


    <TextView
        android:id="@+id/jetons_user"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="30dp"
        android:text="8"
        android:textSize="15dp"
        android:textColor="#403c3c"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/closeBar"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="5dp"
        android:id="@+id/progress"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="45dp"
        android:progress="30"
        android:minHeight="30dp"
        android:progressDrawable="@drawable/horizental_progressbar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<Button-->
        <!--android:id="@+id/speakIt_btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/score_text_view"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:layout_toEndOf="@+id/back_btn"-->
        <!--android:onClick="speakClick"-->
        <!--android:text="Speak it"-->
        <!--android:layout_marginTop="80"-->
        <!--android:visibility="visible" />-->
    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="
   Points"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="280dp"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginLeft="75dp"
        />


    <ImageButton
        android:id="@+id/speak_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/mic_round"
        android:text="Speak"
        android:onClick="saveClick"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="25dp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/back_round"
            android:onClick="backClick"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"


            />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
           android:background="@drawable/next_round"
            android:onClick="nextClick"
            android:layout_marginLeft="180dp"


            />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
